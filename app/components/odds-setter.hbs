<div class="settings-form">
  <h2>Projection Settings</h2>
  <form aria-label="update model" {{on "submit" this.updateModel}}>
    <label>Years: <input type="number" min="0" max="50" value={{this.totalYears}} {{on "input" (fn this.updateInt "totalYears")}}/></label>
    <label>YOY Growth: <input type="number" min="0" step="0.01" max="1" value={{this.growthRate}} {{on "input" (fn this.updateFloat "growthRate")}}/></label>
    <label>Draws: <input type="number" min="0" step="1" max="10000" value={{this.draws}} {{on "input" (fn this.updateInt "draws")}}/></label>
    <label>Waitlist Draws: <input type="number" min="0" step="1" max="10000" value={{this.waitlistDraws}} {{on "input" (fn this.updateInt "waitlistDraws")}}/></label>
    <label>Max Applicants: <input type="number" min="0" step="1000" max="1000000" value={{this.maxApplicants}} {{on "input" (fn this.updateInt "maxApplicants")}}/></label>
    <label>Odds Of Entry From Waitlist: <input type="number" min="0" step=".01" max="1" value={{this.waitlistFactor}} {{on "input" (fn this.updateFloat "waitlistFactor")}}/></label>
    <label>Attrition<input type="string" value={{this.attrition}} {{on "input" (fn this.updateArr "attrition")}}/></label>
    <label>Default Attrition<input type="number" min="0" step=".01" max="1" value={{this.defaultAttrition}} {{on "input" (fn this.updateFloat "defaultAttrition")}}/></label>
    <label>Use Monte Carlo Simulation<input type="checkbox" checked={{this.useMonteCarlo}} {{on "change" this.updateMonteCarlo}}/></label>

    <br>
    <button hidden type="submit" {{on "click" this.updateModel}}>Update</button>
  </form>
  <form aria-label="update formula" {{on "submit" this.persistFormula}}>
    <label>Ticket Formula (JS, n is number of years in lottery)<input type="text" value={{this.formula}} {{on "input" this.updateFormula}}/></label>
    <button type="submit" {{on "click" this.persistFormula}}>Update Formula</button>
  </form>
</div>
<OddsDisplay @model={{this.model}} />
<OddsMaker @model={{this.reversed}} />